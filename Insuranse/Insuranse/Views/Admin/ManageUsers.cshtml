@model IEnumerable<Insurance.Models.UserViewModel>


<head>
    <link rel="stylesheet" href="~/css/tables.css" />
</head>


    <h2>Управление пользователями</h2>

<table class="table table-bordered">
        <thead>
            <tr>
                <th>Имя</th>
                <th>Почта</th>
                <th>ИНН</th>
                <th>Тип пользователя</th>
                <th>Телефон</th>
                <th>Роль</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>@user.TaxId</td>
                    <td>@user.UserType</td>
                    <td>@user.PhoneNumber</td>
                    <td>@user.Role</td>
                    <td>
                        <form asp-action="UpdateRole" asp-controller="Admin" method="post" style="margin-bottom: 10px;">
                            <input type="hidden" name="userId" value="@user.Id" />
                            <select name="newRole" class="form-control" style="margin-bottom: 10px;">
                                <option value="Клиент" selected>Клиент</option>
                                <option value="Агент">Агент</option>
                                <option value="Администратор">Администратор</option>
                            </select>
                            <button type="submit" class="btn btn-primary">Изменить</button>
                        </form>
                        <form asp-action="DeleteUser" asp-controller="Admin" method="post">
                            <input type="hidden" name="userId" value="@user.Id" />
                            <button type="submit" class="btn btn-danger">Удалить</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
