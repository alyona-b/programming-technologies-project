@model Insurance.Models.Contract

<h2>Детали договора</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Номер договора</dt>
        <dd class="col-sm-10">@Model.ContractNumber</dd>
        <dt class="col-sm-2">Сумма выплаты</dt>
        <dd class="col-sm-10">@Model.Payout.ToString("F2")</dd>
        <dt class="col-sm-2">Статус</dt>
        <dd class="col-sm-10">@Model.Status</dd>
        <dt class="col-sm-2">Описание</dt>
        <dd class="col-sm-10">@Model.Description</dd>
    </dl>
</div>
<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Редактировать</a>
<a asp-action="Index" class="btn btn-secondary">Назад</a>