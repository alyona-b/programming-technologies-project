@model IEnumerable<Insurance.Models.Service>

<div class="content">
    <h2>Управление услугами</h2>

    <a asp-action="Create" class="btn btn-primary">Создать</a>
    <a asp-action="Index" class="btn btn-secondary">Назад</a>

    <table>
        <thead>
            <tr>
                <th>Название</th>
                <th>Тип</th>
                <th>Стоимость</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var service in Model)
            {
                <tr>
                    <td>@service.Name</td>
                    <td>@service.Type</td>
                    <td>@string.Format("{0:F2}", service.Price)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@service.Id" class="btn btn-warning">Редактировать</a>
                        <a asp-action="Details" asp-route-id="@service.Id" class="btn btn-info">Детали</a>
                        <a asp-action="Delete" asp-route-id="@service.Id" class="btn btn-danger">Удалить</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>