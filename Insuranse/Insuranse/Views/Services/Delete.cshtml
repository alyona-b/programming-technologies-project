@model Insurance.Models.Service

<h2>Подтверждение удаления</h2>

<p>Вы действительно хотите удалить услугу "<strong>@Model.Name</strong>"?</p>

<div>
    <form asp-action="ConfirmDelete" asp-route-id="@Model.Id" method="post">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger">Удалить</button>
        <a asp-action="Manage" class="btn btn-secondary">Отмена</a>
    </form>
</div>