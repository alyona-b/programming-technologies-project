@model IEnumerable<Insurance.Models.Service>

<h2>Список услуг</h2>

@{
    var isAdminOrAgent = (bool)(ViewData["IsAdminOrAgent"] ?? false);
}

@if (isAdminOrAgent)
{
    <a asp-action="Manage" class="btn btn-primary mb-3">Управление услугами</a>
}


<table>
    <thead>
        <tr>
            <th>Название</th>
            <th>Тип</th>
            <th>Стоимость</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var service in Model)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-route-id="@service.Id">@service.Name</a>
                </td>
                <td>@service.Type</td>
                <td>@string.Format("{0:F2}", service.Price)</td>
            </tr>
        }
    </tbody>
</table>
</table>